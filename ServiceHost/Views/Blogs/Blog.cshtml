@model RadMarket.Query.Contracts.ArticleAgg.ArticleQueryVM 
@{
    ViewData["Title"] = Model.Title;
    ViewData["Keyword"] = Model.Keywords;
    ViewData["MetaDescription"] = Model.MetaDescription;
}

<div class="container my-5">
    <div class="row">
        <div class="col-sm-12 col-md-8 border p-3 ">
            <div class="single-blog ">
                <div class="single-blog-img text-center">
                    <img class="img-fluid rounded"
                         src="~/Pictures/@Model.PictureName" alt="@Model.PictureAlt" title="@Model.PictureTitle">
                </div>
                <div class="border p-3 my-3">
                    <p class="h6">خلاصه موضوع</p>
                    <p>
                        @Model.ShortDescription
                    </p>
                </div>
                <div class="text-single-blog border p-3 my-3">
                    <p class="h6">
                        @Html.Raw(Model.Description)
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-4 ">
            <div class="border p-3 text-center">
                <p class="h6">نام نویسنده : <span>@Model.Author</span></p>
                <p class="h6">تاریخ انتشار : <span>@Model.PublishDate</span></p>
            </div>
            <div class="border p-3">
                <p class="h4  text-center">شاید بخوانید</p>
                <div>
                    <div class="suggest-single-blog">
                        <div class="border p-3">
                            @await Component.InvokeAsync("SideBarBlog")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>