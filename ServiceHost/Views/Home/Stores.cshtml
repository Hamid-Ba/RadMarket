@model ReflectionIT.Mvc.Paging.PagingList<RadMarket.Query.Contracts.StoreAgg.StoreQueryVM>
@addTagHelper *, ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "شرکت های پخش";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- title -->
<div class="container my-5">
    <div class="title col-sm-4 col-md-6 col-lg-8 m-auto">
        <h4>@ViewData["Title"]</h4>
    </div>
</div>
<!-- title -->
<!-- factory -->
<div class="container p-3  my-5 admin-panel">
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var entity in Model)
            {
                <div class="col-sm-12 col-md-6 rounded my-3">
                    <a asp-area="" asp-controller="Store" asp-action="Index" asp-route-id="@entity.Id" asp-route-name="@entity.Name">
                        <div class="admin-panel-box">
                            <h4>@entity.Name</h4>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <p class="alert alert-warning">هیچ شرکت پخشی وجود ندارد</p>
        }

    </div>
</div>
<!-- factory -->
@if (Model.PageCount > 1)
{
    <div class="my-5">
        <nav aria-label="Suppliers navigation example">
            <vc:pager paging-list="@Model" />
        </nav>
    </div>
}
<!-- Paginate -->