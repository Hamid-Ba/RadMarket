@using Framework.Application
@model IEnumerable<RadMarket.Query.Contracts.ProductAgg.ProductQueryVM>

@foreach (var product in Model)
{
    <div class="offer-box rounded thumbnail">
        <div class="offer-product text-center">
            <img src="~/Pictures/@product.Picture" alt="@product.PictureAlt" title="@product.PictureTitle" style="height: 125px;">
            <h6 class="offer-product-title">@product.Name</h6>
            <p class="offer-product-text">
                @product.Description
            </p>
            <p class="offer-product-price">قیمت مصرف کننده : <span>@product.ConsumerPrice.ToMoney()</span></p>
            <p class="offer-product-price">قیمت خرید : <span>@product.PurchasePrice.ToMoney()</span></p>
            <p class="offer-product-price">تخفیف <span>@product.DiscountRate%</span></p>
            <a href="" class="btn btn-outline-danger">مشاهده</a>
        </div>
    </div>
}
