
@{
    ViewData["Title"] = "ثبت نام کاربر";
}

<div class="auth-user container col-sm-12 col md-8 col-lg-6">
    <div class="d-flex justify-content-center">
        <h4>فرم ثبت نام کاربر</h4>
    </div>
    <div class="auth">
        <div class="p-3">
            <form class="p-3">
                <div class="row">
                    <div class="col-6">
                        <label for="exampleInputEmail1" class="form-label">نام</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                    <div class="col-6">
                        <label for="exampleInputEmail1" class="form-label">نام</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-6">
                        <label for="exampleInputEmail1" class="form-label">استان</label>
                        <select class="form-select" aria-label="Default select example">
                            <option value="1">زاهدان</option>
                            <option value="2">مشهد</option>
                            <option value="3">بیرجند</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <label for="exampleInputEmail1" class="form-label">شهر</label>
                        <select class="form-select" aria-label="Default select example">
                            <option value="1">زاهدان</option>
                            <option value="2">مشهد</option>
                            <option value="3">بیرجند</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">آدرس</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">مرا به خاطر بسپار</label>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">کد بازاریاب</label>
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-outline-danger w-50">ورود</button>
                </div>
            </form>
        </div>
    </div>
</div>