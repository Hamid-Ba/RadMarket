@model IEnumerable<RadMarket.Query.Contracts.CategoryAgg.CategoryQueryVM>
@{
    ViewData["Title"] = "دسته بندی ها";
}

<div class="best-seller-title my-5">
    <h4>دسته بندی</h4>
</div>


<!-- blogs -->
<div class="container">
    <div class="categories-boxs">
        <div class="row">
            @if (Model.Any())
            {
                @foreach (var cat in Model)
                {
                    <div class="col-sm-12 col-md-3 blogs-box my-3">
                        <div class="category-box">
                            <a asp-controller="Categories" asp-action="Products" asp-route-slug="@cat.Slug">
                                <div class="categories-box">
                                    <h4>@cat.Name</h4>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="alert alert-warning">هیچ دسته بندی وجود ندارد</p>
            }


        </div>
    </div>
</div>
<!-- blogs -->
