@using Framework.Application
@model ReflectionIT.Mvc.Paging.PagingList<RadMarket.Query.Contracts.StoreTicketAgg.StoreTicketQueryVM>
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "لیست پیام ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- .create-box-me -->
<div class="container my-5">
    <div class="search-box-me">
        <i class="fa fa-plus text-dark"></i>
        <a asp-controller="StoreMessage" asp-action="Create">ارسال پیام</a>
    </div>
</div>
<!-- .create-box-me -->
<!-- tabels -->
<div class="table-me container my-5" style="overflow-y: scroll !important">
    @if (Model.Count == 0 || Model.Any() is false)
    {
        <p class="alert alert-warning"> هیچ پیامی وجود ندارد </p>
    }
    else
    {
        <table class="table table-striped table-hover" style="overflow-y: scroll;">
            <thead>
                <tr>
                    <th scope="col">شماره</th>
                    <th scope="col">موضوع</th>
                    <th scope="col">ارسالی از طرف</th>
                    <th scope="col">گیرنده پیام</th>
                    <th scope="col">تاریخ ایجاد</th>
                    <th scope="col">عملیات</th>

                </tr>
            </thead>


            <tbody>

                @foreach (var entity in Model)
                {
                    <tr>
                        <td scope="row"> @(ViewBag.Rows++)</td>
                        <td>@entity.Title</td>
                        <td>@entity.FirstStoreName</td>
                        <td>@entity.SecondStoreName</td>
                        <td>@entity.CreationDate</td>

                        <td><a asp-controller="StoreMessage" asp-action="Messages" asp-route-id="@entity.Id" class="btn-sm btn-primary">پیام ها</a></td>
                    </tr>
                }
            </tbody>

        </table>
    }

</div>
<!-- tabels -->
<!-- Paginate -->
@if (Model.PageCount > 1)
{
    <div class="my-5">
        <nav aria-label="Suppliers navigation example">
            <vc:pager paging-list="@Model" />
        </nav>
    </div>
}
<!-- Paginate -->