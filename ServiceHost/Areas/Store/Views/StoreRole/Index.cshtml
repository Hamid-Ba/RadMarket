@model IEnumerable<AccountManagement.Application.Contract.StoreRoleAgg.StoreRoleVM>
@addTagHelper *, ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "نقش ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- .create-box-me -->
<div class="container my-5">
    <div class="search-box-me">
        <i class="fa fa-plus text-dark"></i>
        <a asp-area="Store" asp-controller="StoreRole" asp-action="Create">افزودن نقش</a>
    </div>
</div>
<!-- .create-box-me -->
<!-- tabels -->
<div class="table-me container my-5" style="overflow-y: scroll !important">
    @if (Model.Any() is false)
    {
        <p class="alert alert-warning"> هنوز هیچ نقشی ثبت نشده است </p>
    }
    else
    {
        <table class="table table-striped table-hover" style="overflow-y: scroll;">
            <thead>
                <tr>
                    <th scope="col">عنوان</th>
                    <th scope="col">توضیحات</th>
                    <th scope="col">تاریخ ثبت</th>

                    <th scope="col">عملیات</th>

                </tr>
            </thead>


            <tbody>

                @foreach (var entity in Model)
                {
                    <tr>
                        <td>@entity.Name</td>
                        <td>@entity.Description</td>
                        <td>@entity.CreationDate</td>

                        <td>
                            <a asp-controller="StoreRole" asp-action="Edit" asp-route-id="@entity.Id" class="btn-sm btn-outline-warning">ویرایش</a>
                            <a asp-controller="StoreRole" asp-action="Delete" asp-route-id="@entity.Id" class="btn-sm btn-outline-danger">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }

</div>
<!-- tabels -->