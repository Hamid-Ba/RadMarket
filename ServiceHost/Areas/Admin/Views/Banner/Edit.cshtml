@model AdminManagement.Application.Contract.BannerAgg.EditBannerVM


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش بنر </h4>
</div>

<form asp-area="Admin" asp-controller="Banner" asp-action="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StoreId" class="control-label">شرکت</label>
                    <select class="form-control" asp-for="StoreId" asp-items="@ViewBag.Stores">
                        <option value="0">انتخاب کنید...</option>
                    </select>
                    <span asp-validation-for="StoreId" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Picture" class="control-label">تصویر</label>
                    <input type="file" class="form-control" asp-for="Picture" accept="image/*">
                    <span asp-validation-for="Picture" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictuerAlt" class="control-label">تصویر جایگزین</label>
                    <input type="text" class="form-control" asp-for="PictuerAlt">
                    <span asp-validation-for="PictuerAlt" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureTitle" class="control-label">عنوان تصویر</label>
                    <input type="text" class="form-control" asp-for="PictureTitle">
                    <span asp-validation-for="PictureTitle" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Position" class="control-label">موقعیت</label>
                    <select asp-for="Position" class="form-control">
                        <option value="0"> سطر اول </option>
                    </select>
                    <span asp-validation-for="Position" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ColSize" class="control-label">اندازه</label>
                    <input type="text" class="form-control" asp-for="ColSize">
                    <span asp-validation-for="ColSize" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Url" class="control-label">لینک</label>
                    <input type="text" class="form-control" asp-for="Url">
                    <span asp-validation-for="Url" class="error"></span>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="PictureName" />
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>