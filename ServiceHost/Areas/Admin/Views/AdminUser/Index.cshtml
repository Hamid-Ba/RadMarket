@model IEnumerable<AccountManagement.Application.Contract.AdminUserAgg.AdminUserVM>

@{
    ViewData["Title"] = "کارمندان";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Action("Create", "AdminUser")">ایجاد کارمند جدید</a>
        </p>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@ViewData["Title"]</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 makeTableResponsive">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام</th>
                                    <th>نقش</th>
                                    <th>شماره موبایل</th>
                                    <th>تاریخ ثبت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (var entity in Model)
                                {
                                    <tr class="text-center">
                                        <td>@entity.Id</td>
                                        <td>@($"{entity.FirstName} {entity.LastName}")</td>
                                        <td>@entity.AdminRoleTitle</td>
                                        <td>@entity.Mobile</td>
                                        <td>@entity.CreationDate</td>

                                        <td style="text-align: center;">

                                            <a class="btn btn-warning pull-right m-rl-5"
                                               href="#showmodal=@Url.Action("Edit", "AdminUser", new {id = entity.Id})">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a class="btn btn-danger pull-right m-rl-5"
                                               href="#showmodal=@Url.Action("Delete", "AdminUser", new {id = entity.Id})">
                                                <i class="fa fa-trash"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}