@model StoreManagement.Application.Contract.StoreAgg.SpecifyStatusOfStoreVM


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">عدم تایید درخواست</h4>
</div>

<form asp-area="Admin" asp-controller="Store" asp-action="DissConfirm"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="StoreGivenStatusReason" class="control-label">دلیل</label>
                    <textarea class="form-control autogrow" asp-for="StoreGivenStatusReason"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="StoreGivenStatusReason" class="error"></span>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <input type="hidden" asp-for="Id" />
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ارسال دلیل</button>
    </div>
</form>