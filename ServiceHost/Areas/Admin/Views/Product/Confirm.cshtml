@model StoreManagement.Application.Contract.ProductAgg.ChangeStatusProductVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">تایید محصول</h4>
</div>

<form asp-area="Admin" asp-controller="Product" asp-action="Confirm"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <h5 style="font-style: oblique">آیا از تایید این محصول اطمینان دارید؟</h5>
    </div>
    <div class="modal-footer">
        <input asp-for="Id" type="hidden" />
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">خیر</button>
        <button type="submit" class="btn btn-success waves-effect waves-light">بله</button>
    </div>
</form>