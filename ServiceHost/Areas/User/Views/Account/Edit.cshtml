@model AccountManagement.Application.Contract.UserAgg.EditUserVM
@{
    ViewData["Title"] = "ویرایش اطلاعات";
}

<div class="auth-user container col-sm-12 col md-8 col-lg-6">
    <div class="d-flex justify-content-center">
        <h4>ویرایش اطلاعات</h4>
    </div>
    <div class="auth">
        <form class="p-3" asp-area ="User" asp-controller="Account" asp-action="Edit" method="post">

            <div class="row mb-3">
                <div class="col-6">
                    <label for="exampleInputEmail1" class="form-label">نام</label>
                    <input asp-for="FirstName" type="" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label for="exampleInputPassword1" class="form-label">نام خانوادگی</label>
                    <input asp-for="LastName" type="" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-6">
                    <label for="exampleInputEmail1" class="form-label">رمز عبور جدید</label>
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label for="exampleInputEmail1" class="form-label">تکرار رمز عبور</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-6">
                    <label for="exampleInputEmail1" class="form-label">استان</label>
                    <select asp-for="Province" asp-items="@ViewBag.Provinces" class="form-select" aria-label="Default select example">
                        <option>انتخاب کنید ...</option>
                    </select>
                    <span asp-validation-for="Province" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label for="exampleInputPassword1" class="form-label">شهر</label>
                    <input asp-for="City" type="" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
           
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">آدرس</label>
                <textarea asp-for="Address" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-danger w-50">اعمال تغییرات</button>
            </div>
        </form>
    </div>
</div>