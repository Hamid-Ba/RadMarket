
@{
    ViewData["Title"] = "پنل کاربری";
    Layout = "_Layout";
}

<!-- admin panel -->
<div class="container p-3 border my-5 admin-panel">
    <div class="row">
        <div class="col-sm-12 col-md-4 rounded my-3">
            <a asp-controller="Account" asp-action="Edit">
                <div class="admin-panel-box">
                    <h4>ویرایش اطلاعات</h4>
                </div>
            </a>
        </div>
        <div class="col-sm-12 col-md-4 rounded my-3">
            <a asp-controller="Order" asp-action="Index">
                <div class="admin-panel-box">
                    <h4>مشاهده سفارشات</h4>
                </div>
            </a>
        </div>
        <div class="col-sm-12 col-md-4 rounded my-3">
            <a asp-area="" asp-controller="Account" asp-action="Logout">
                <div class="admin-panel-box">
                    <h4>خروج</h4>
                </div>
            </a>
        </div>
    </div>
</div>
